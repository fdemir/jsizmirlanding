---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="h-screen rounded-b-[6rem] flex justify-center flex-col items-center">
  <img src="/coffee.svg" class="w-1/4 my-4" />
  <h1 class="text-[4rem] font-bold text-neutral-900 mb-3">
    {title}
  </h1>
  <h3 class="text-neutral-500 text-2xl w-1/2 text-center">
    We organize meetups, workshops, and conferences for the Izmir JavaScript community.
  </h3>
</div>